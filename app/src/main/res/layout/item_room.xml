<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/roomCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/virgin_money_high_resolution_logo" />

            <TextView
                android:id="@+id/room_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Room ID"
                app:layout_constraintTop_toTopOf="@id/logo"
                app:layout_constraintStart_toEndOf="@id/logo"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/created_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Created At"
                app:layout_constraintTop_toBottomOf="@id/room_id"
                app:layout_constraintStart_toStartOf="@id/room_id"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/max_occupancy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Max Occupancy"
                app:layout_constraintTop_toBottomOf="@id/created_time"
                app:layout_constraintStart_toStartOf="@id/created_time"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/is_occupied"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Occupied"
                app:layout_constraintTop_toBottomOf="@id/max_occupancy"
                app:layout_constraintStart_toStartOf="@id/max_occupancy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>